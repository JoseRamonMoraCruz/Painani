<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#0C4063">

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/btnBorrarNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="end"
            android:src="@drawable/img_delete"
            android:scaleY="2"
            android:scaleX="2"
            android:background="@color/white"
            app:tint="@color/red_c3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TituloNoticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto02"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <TextView
                android:id="@+id/DescripcionNoticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n"
                android:textStyle="italic"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <ImageView
                android:id="@+id/imagenNoticia"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:scaleType="centerInside"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>